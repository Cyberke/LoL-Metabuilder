<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity$PlaceholderFragment">

    <TextView
        android:text="@string/free_champ_rotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/gvFreeChamps"
        android:layout_below="@id/textView"
        android:layout_marginTop="10dp"
        android:numColumns="5"
        android:columnWidth="55dp"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp">

    </GridView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/recent_builds"
        android:id="@+id/textView4"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/gvFreeChamps"
        android:layout_marginTop="40dp"/>

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:id="@+id/gVRecentBuilds"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/txtVPatchNote"
        android:layout_alignStart="@+id/txtVPatchNote"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
</ScrollView>