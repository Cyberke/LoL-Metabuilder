<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity$PlaceholderFragment">

    <TextView
        android:text="@string/free_champ_rotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView" />

    <!--TODO: GridLayout omzetten naar GridView??-->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gLChamps"
        android:rowCount="2"
        android:columnCount="5"
        android:layout_below="@id/textView"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgVChamp1"
            android:minHeight="@dimen/icons"
            android:minWidth="@dimen/icons"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgVChamp2"
            android:minHeight="@dimen/icons"
            android:minWidth="@dimen/icons"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgVChamp3"
            android:minHeight="@dimen/icons"
            android:minWidth="@dimen/icons"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgVChamp4"
            android:minHeight="@dimen/icons"
            android:minWidth="@dimen/icons"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgVChamp5"
            android:minHeight="@dimen/icons"
            android:minWidth="@dimen/icons"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgVChamp6"
            android:minHeight="@dimen/icons"
            android:minWidth="@dimen/icons"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgVChamp7"
            android:minHeight="@dimen/icons"
            android:minWidth="@dimen/icons"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgVChamp8"
            android:minHeight="@dimen/icons"
            android:minWidth="@dimen/icons"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgVChamp9"
            android:minHeight="@dimen/icons"
            android:minWidth="@dimen/icons"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgVChamp10"
            android:minHeight="@dimen/icons"
            android:minWidth="@dimen/icons"
            android:src="@drawable/ic_launcher" />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/recent_builds"
        android:id="@+id/textView4"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/gLChamps"
        android:layout_marginTop="20dp"/>

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:id="@+id/gVRecentBuilds"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/txtVPatchNote"
        android:layout_alignStart="@+id/txtVPatchNote"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/game_patch_notes"
        android:id="@+id/textView3"
        android:layout_below="@+id/gVRecentBuilds"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patch note CONTAINER"
        android:id="@+id/txtVPatchNote"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/gLChamps"
        android:layout_alignStart="@+id/gLChamps" />


</RelativeLayout>
