<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.howest.lolmetabuilder.ChampionFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/champSearch"
            android:orientation="horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtChampionName"
                android:layout_weight="1"
                android:hint="Champion name"/>

            <Button
                android:layout_width="@dimen/cancelbtn"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:id="@+id/btnCancel" />
        </LinearLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/champFilter"
            android:layout_marginTop="10dp"
            android:rowCount="3"
            android:columnCount="3"
            android:layout_centerInParent="true"
            android:layout_below="@id/champSearch">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:paddingStart="30dp"
                android:paddingLeft="30dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:textSize="15sp"
                android:text="Fighter"
                android:id="@+id/cbFighter" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:paddingStart="30dp"
                android:paddingLeft="30dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:textSize="15sp"
                android:text="Assassin"
                android:id="@+id/cbAssassin"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:paddingStart="30dp"
                android:paddingLeft="30dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:textSize="15sp"
                android:text="Marksman"
                android:id="@+id/cbMarksman"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:paddingStart="30dp"
                android:paddingLeft="30dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:textSize="15sp"
                android:text="Mage"
                android:id="@+id/cbMage" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:paddingStart="30dp"
                android:paddingLeft="30dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:textSize="15sp"
                android:text="Tank"
                android:id="@+id/cbTank" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:paddingStart="30dp"
                android:paddingLeft="30dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:textSize="15sp"
                android:text="Support"
                android:id="@+id/cbSupport" />

            <!--Lege textView om free champ 1 grid block op te schuiven-->
            <TextView></TextView>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:paddingStart="30dp"
                android:paddingLeft="30dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:textSize="15sp"
                android:text="Free"
                android:id="@+id/cbFreeChampions" />

        </GridLayout>


        <GridView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gvChampions"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/champFilter"
            android:layout_marginTop="10dp"
            android:numColumns="4" />

    </RelativeLayout>

</FrameLayout>
