<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.howest.lolmetabuilder.GenerateBuildResultFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgVChampAvatar"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:minWidth="@dimen/large_icons"
            android:minHeight="@dimen/large_icons"
            android:src="@drawable/ic_launcher" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgBtnItem1"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgVChampAvatar"
            android:layout_toEndOf="@+id/imgVChampAvatar"
            android:minWidth="@dimen/icons"
            android:minHeight="@dimen/icons"
            android:src="@drawable/ic_launcher" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgBtnItem2"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgBtnItem1"
            android:layout_toEndOf="@+id/imgBtnItem1"
            android:minWidth="@dimen/icons"
            android:minHeight="@dimen/icons"
            android:src="@drawable/ic_launcher" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgBtnItem3"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgBtnItem2"
            android:layout_toEndOf="@+id/imgBtnItem2"
            android:minWidth="@dimen/icons"
            android:minHeight="@dimen/icons"
            android:src="@drawable/ic_launcher"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgBtnItem4"
            android:minWidth="@dimen/icons"
            android:minHeight="@dimen/icons"
            android:src="@drawable/ic_launcher"
            android:layout_below="@+id/imgBtnItem1"
            android:layout_toLeftOf="@+id/imgBtnItem5"
            android:layout_toStartOf="@+id/imgBtnItem5" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgBtnItem5"
            android:minWidth="@dimen/icons"
            android:minHeight="@dimen/icons"
            android:src="@drawable/ic_launcher"
            android:layout_below="@+id/imgBtnItem2"
            android:layout_alignLeft="@+id/imgBtnItem2"
            android:layout_alignStart="@+id/imgBtnItem2" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgBtnItem6"
            android:layout_toEndOf="@+id/imgBtnItem5"
            android:minWidth="@dimen/icons"
            android:minHeight="@dimen/icons"
            android:src="@drawable/ic_launcher"
            android:layout_below="@+id/imgBtnItem2"
            android:layout_toRightOf="@+id/imgBtnItem5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level"
            android:id="@+id/textView15"
            android:layout_below="@+id/imgBtnItem4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"/>

        <Spinner
            android:layout_width="@dimen/large_icons"
            android:layout_height="40dp"
            android:id="@+id/spinnerLevel"
            android:layout_alignTop="@+id/textView15"
            android:layout_toRightOf="@+id/textView15"
            android:layout_toEndOf="@+id/textView15"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Stats"
            android:id="@+id/textView16"
            android:layout_below="@+id/spinnerLevel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp" />

        <GridView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gVResultStats"
            android:layout_below="@+id/textView16"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />

    </RelativeLayout>


</FrameLayout>
